  "description": "A React component library for previewing various file types including Excel, Word, PDF, images, and more",
  "license": "MIT",
  "type": "module",
  "main": "./dist/react-file-preveye.cjs.js",
  "module": "./dist/react-file-preveye.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-file-preveye.es.js",
      "require": "./dist/react-file-preveye.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "file-preview",
    "excel",
    "xlsx",
    "word",
    "docx",
    "pdf",
    "image-viewer",
    "document-viewer",
    "spreadsheet",
    "file-viewer",
    "react-component"
  ],
  "author": "Skirtek",
  "repository": {
    "type": "git",
    "url": "https://github.com/Skirtek/react-file-preveye"
  },
  "bugs": {
    "url": "https://github.com/Skirtek/react-file-preveye/issues"
  },
  "homepage": "https://github.com/Skirtek/react-file-preveye",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "yarn eslint --ext .js,.ts,.jsx,.tsx src",
    "lint:fix": "yarn eslint --ext .js,.ts,.jsx,.tsx src --fix",
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "prepublishOnly": "yarn lint && yarn build"
  },
  "peerDependencies": {
    "mammoth": "^1.11.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "styled-components": "^6.0.0",
    "xlsx": "^0.18.5"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "mammoth": "^1.11.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "xlsx": "^0.18.5"
  }
}